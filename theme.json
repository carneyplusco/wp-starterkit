{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "layout": {
      "contentSize": "1400px",
      "wideSize": "1400px"
    },
    "spacing": {
      "blockGap": false,
      "units": [
        "%",
        "ch",
        "vh",
        "vw",
        "em",
        "rem"
      ]
    },
    "spacingScale": {
      "operator": "+",
      "increment": 0.5,
      "steps": 8,
      "mediumStep": 1.5,
      "unit": "rem"
    },
    "typography": {
			"dropCap": false,
      "fontFamilies": [
        {
          "name": "Sans Serif",
          "slug": "serif",
          "fontFamily": "\"Georgia\", serif"
        },
        {
          "name": "Sans",
          "slug": "sans",
          "fontFamily": "\"Helvetica Neue\", Arial, sans-serif"
        }
      ]
    },
    "color": {
      "defaultPalette": false,
      "defaultGradients": false
    },
    "blocks": {
      "core/heading": {
        "typography": {
          "customFontSize": false,
          "fontSizes": []
        }
      },
      "core/paragraph": {
        "typography": {
          "customFontSize": true,
          "fontSizes": []
        }
      },
      "core/group": {
				"spacing": {
          "blockGap": true,
					"padding": true,
          "margin": true
				}
			},
      "core/media-text": {
				"spacing": {
          "blockGap": true,
					"padding": true,
          "margin": true
				}
			},
      "core/columns": {
				"spacing": {
          "blockGap": true,
					"padding": true,
          "margin": true
				}
			},
      "core/column": {
				"spacing": {
          "blockGap": true,
					"padding": true,
          "margin": true
				}
			},
      "core/buttons": {
				"spacing": {
          "blockGap": true,
					"padding": true,
          "margin": true
				}
			},
      "core/button": {
        "typography": {
          "customFontSize": false,
          "fontSizes": [],
          "fontStyle": false,
          "fontWeight": false,
          "lineHeight": false,
          "textTransform": false,
          "letterSpacing": false,
          "textDecoration": false
        },
        "border": {
          "radius": false
        },
        "color": {
          "text": false,
          "custom": false
        },
        "spacing": {
					"padding": false,
          "margin": false
				}
      }
    }
  }
}
